namespace PR;

class Entity{

	protected $aPermits = array('getArray','setArray','post');
	private $aFuncs_ = array();

	public function __call($name,$args){
 		$func = $this->aFuncs_[$name];
		return call_user_func_array($func,$args);
 	}

	public function bind($name,$func){
		if(!in_array($name,$this->aPermits)){
			throw new Exception(C_PR_ERR_EPERM,SMSG('PR_E019',$name),true);
		}
		$this->aFuncs_[$name] = $func->bindTo($this,get_class($this));
	}

	protected function getArray($riType=\PR\Model::TYPE_PRIMARY){
	}

	protected function setArray($raArray){
	}

	protected function post(){
	}
}
