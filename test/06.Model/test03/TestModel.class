namespace sample;

class TestModel extends \PR\Model{

	public $oAllDataType = null;
	public $iIdxType = 0;

	public function start($riIdxType=0){
		$this->iIdxType = $riIdxType;
		$this->oDao->connect();
		$this->oDao->begin();

		$cntr = new AllDataType($this->oDao);
		if($riIdxType == 0){
			$cntr->setIndex(\PR\Model::IDX_SERIAL);
		}else if($riIdxType == 1){
			$cntr->setIndex(\PR\Model::IDX_HIERARCHY,array('prCol_Alphabet','prCol_Numeric'));
		}else if($riIdxType == 2){
			$cntr->setIndex(\PR\Model::IDX_JOINKEY,array('prCol_Alphabet','prCol_Numeric'));
		}
		$this->oAllDataType = $cntr;

		$pager = new \PR\Pager('0603.php',100,5);
		$this->oAllDataType->setPager($pager);
	}

	public function end($rbCommit=false){
		if($rbCommit){
			$this->oDao->commit();
		}else{
			$this->oDao->rollback();
		}
	}

	public function getAllDataType(){
		return $this->oAllDataType;
	}

	public function listData(){
		$rc = $this->oAllDataType->pageX(array());
		return $rc;
	}

	public function select(){
		$this->oAllDataType->post();
		$this->oAllDataType->setTargetVars(\PR\Model::TYPE_PRIMARY);
		$rc = $this->oAllDataType->readX();
		return $rc;
	}

	public function insert(){
		$this->oAllDataType->post();
		$this->sErrMsg = $this->oAllDataType->checkPostByTarget('<br>',6,0,2);
		if(!empty($this->sErrMsg)) return C_PR_ERR_EPARAM;
		$rc = $this->oAllDataType->addX();
		if($rc != 0) return $rc;
		return 0;
	}

	public function update(){
		$this->oAllDataType->post();
		$this->sErrMsg = $this->oAllDataType->checkPostByTarget('<br>',6,0,2);
		if(!empty($this->sErrMsg)) return C_PR_ERR_EPARAM;
		$rc = $this->oAllDataType->updateX();
		if($rc != 0) return $rc;
		return 0;
	}

	public function remove(){
		$this->oAllDataType->post();
		$this->sErrMsg = $this->oAllDataType->checkPostByTarget('<br>',6,0,2);
		if(!empty($this->sErrMsg)) return C_PR_ERR_EPARAM;
		$rc = $this->oAllDataType->removeX();
		if($rc != 0) return $rc;
		return 0;
	}
}
?>
